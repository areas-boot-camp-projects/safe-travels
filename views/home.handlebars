{{#if user}}
  <div class="flex justify-center">
    <h2 id="favorites" class="text-2xl">Your Favorites</h2>
  </div>

  <div class="flex justify-center">
    <ul>
      {{#each user.favorites}}
        <li>{{favorite_city}}, {{favorite_state}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}

<div class="flex justify-center">
  <h2 class="text-2xl">Search By Region</h2>
</div>

<div class="flex justify-center">
  <form id="search-form">
    <input class="Region" type="text" autocomplete="off" placeholder="City or County" id="city">
    <input class="Region" type="text" autocomplete="off" placeholder="State" id="state">
    <button class="submit" type="submit">Search</button>
  </form>
</div>

<div class="flex justify-center">
  <h2 id="results" class="text-2xl"></h2>
</div>

<div class="flex justify-center">
  <div id="city-covid-data"></div>
</div>

<script src="js/search.js"></script>

